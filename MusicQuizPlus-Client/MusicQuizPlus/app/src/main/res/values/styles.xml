<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayAlbumNowStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/mqWhite</item>
        <item name="android:checked">false</item>
        <item name="fontFamily">@font/concert_one</item>
        <item name="colorAccent">@color/mqRed</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/mqWhite</item>
        <item name="android:textColorPrimary">@color/mqWhite</item>
        <item name="android:editTextColor">@color/mqWhite</item>
        <item name="android:textColorHint">@color/nonSearchHint</item>
    </style>

    <style name="AllFilterButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/search_filter_all_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/mqWhite</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:fontFamily">@font/contrail_one</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchFilterButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/search_filter_button_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/mqWhite</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:fontFamily">@font/contrail_one</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="PlaylistFilterButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/search_filter_playlist_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/mqWhite</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:fontFamily">@font/contrail_one</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>