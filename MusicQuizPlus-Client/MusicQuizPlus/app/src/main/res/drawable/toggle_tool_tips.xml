<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/round_button_no_stroke" android:width="50dp" android:height="50dp"/>
            <item android:drawable="@drawable/yellow_light_bulb" android:width="40dp" android:height="40dp" android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/round_button_no_stroke" android:width="50dp" android:height="50dp"/>
            <item android:drawable="@drawable/light_bulb" android:width="40dp" android:height="40dp" android:gravity="center"/>
        </layer-list>
    </item>
</selector>