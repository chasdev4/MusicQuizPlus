<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/round_button" android:width="50dp" android:height="50dp"/>
            <item android:drawable="@drawable/icon_unmute" android:width="40dp" android:height="40dp" android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/round_button" android:width="50dp" android:height="50dp"/>
            <item android:drawable="@drawable/icon_mute" android:width="40dp" android:height="40dp" android:gravity="center"/>
        </layer-list>
    </item>
</selector>