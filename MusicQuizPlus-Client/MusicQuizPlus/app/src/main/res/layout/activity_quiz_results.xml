<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults"
    android:background="@color/mqPurple3"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizResultsHeader"
        android:textSize="40sp"
        android:text="@string/quiz_results"
        android:textAlignment="center"
        android:textColor="@color/mqWhite"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTitle"
        android:text="@string/score"
        android:textSize="40sp"
        android:textColor="@color/mqWhite"
        android:layout_below="@id/quizResultsHeader"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userScore"
        android:layout_below="@id/scoreTitle"
        android:textSize="48sp"
        android:textAlignment="center"
        android:textColor="@color/mqBlue"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accuracyTitle"
        android:layout_below="@id/userScore"
        android:textStyle="bold"
        android:textColor="@color/mqWhite"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="@string/accuracy"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/userAccuracy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accuracyTitle"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@color/mqBlue"
        android:textSize="48sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultsOfQuiz"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numOfCorrectAnswers"
                android:text="8"
                android:textColor="@color/mqWhite"
                android:textSize="42sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" out of "
                android:textColor="@color/mqWhite"
                android:textSize="42sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numOfTotalQuestions"
                android:text="10"
                android:textColor="@color/mqWhite"
                android:textSize="42sp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continueFromResults"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@color/mqWhite"
        android:text="@string/continueText"
        android:textSize="24sp"
        android:padding="8dp"/>

</RelativeLayout>