<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizView"
    android:background="@color/mqPurple3">

    <RelativeLayout
        android:id="@+id/quizViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/quizViewBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_chevron"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"/>

        <ImageView
            android:id="@+id/quizViewCoverImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/spotify_todays_hits"
            android:layout_toEndOf="@id/quizViewBackButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quizViewTitle"
            android:layout_toEndOf="@id/quizViewCoverImage"
            android:text="@string/sample_song_title"
            android:textColor="@color/mqWhite"
            android:textSize="20sp"
            android:fontFamily="@font/concert_one"
            android:layout_marginTop="18dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/playlistBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewTitle"
            android:layout_toEndOf="@id/quizViewCoverImage"
            android:text="@string/playlist_by"
            android:textColor="@color/mqWhite"
            android:fontFamily="@font/commissioner"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/quizViewOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewTitle"
            android:layout_toEndOf="@id/playlistBy"
            android:text="@string/playlist_by_spotify"
            android:textColor="@color/mqWhite"
            android:fontFamily="@font/commissioner"
            android:layout_marginStart="3dp"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/quizViewHeartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_heart"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewCoverImage"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/quizViewSpotifyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/spotify_logo_in_mqpurple2"
                android:background="@null"
                android:layout_marginHorizontal="80dp"/>

            <ImageButton
                android:id="@+id/quizViewShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_icon"
                android:background="@null"
                android:layout_toEndOf="@id/quizViewSpotifyButton"
                android:layout_marginHorizontal="80dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizViewListView"
        android:layout_below="@id/quizViewHeader"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/quizViewStartQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mqRed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/start_quiz"
        android:paddingVertical="15dp"
        android:fontFamily="@font/concert_one"
        android:textSize="22sp"
        android:elevation="8dp" />

    <ImageButton
        android:id="@+id/quizViewBackToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/up_chevron"
        android:background="@drawable/round_button_no_stroke"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        />

</RelativeLayout>