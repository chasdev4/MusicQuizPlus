<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/mqPurple2"
    android:layout_margin="1dp">

    <RelativeLayout
        android:id="@+id/quizViewTrackInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playSampleAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/quizViewTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:fontFamily="@font/concert_one"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/sample_song_title"
            android:textColor="@color/mqWhite"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quizViewTrackArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewTrackTitle"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:fontFamily="@font/commissioner"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/sample_artist"
            android:textColor="@color/mqWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quizViewTrackAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewTrackArtist"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:fontFamily="@font/commissioner"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/sample_album"
            android:textColor="@color/mqWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quizViewTrackYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizViewTrackAlbum"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/commissioner"
            android:text="@string/sample_year"
            android:textColor="@color/mqWhite"
            android:textSize="12sp" />

    </RelativeLayout>

    <ToggleButton
        android:id="@+id/playSampleAudio"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:button="@drawable/toggle_play"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>